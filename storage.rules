rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own profile photos
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload and manage deck images
    match /decks/{deckId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/decks/$(deckId)).data.createdBy == request.auth.uid;
    }
    
    // Default rule - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
